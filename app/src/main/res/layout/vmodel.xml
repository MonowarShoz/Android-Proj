<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        card_view:cardBackgroundColor="@android:color/holo_orange_light"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="8dp"
        card_view:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/nameFoodTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:text="FOOOOD"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp"
               />

            <TextView
                android:id="@+id/cav"
                android:layout_width="72dp"
                android:layout_height="28dp"
                android:layout_below="@+id/nameFoodTxt"
                android:layout_alignStart="@id/calTxt"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="false"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="73dp"
                android:layout_marginTop="66dp"
                android:layout_marginBottom="0dp"
                android:text="Calories"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/calTxt"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_below="@id/cav"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="-28dp"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="0dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/serv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_alignParentEnd="true"

                android:layout_centerInParent="true"
                android:layout_marginTop="-21dp"
                android:layout_marginEnd="2dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="false"


                android:layout_centerInParent="true"
                android:layout_marginEnd="30dp"
                android:text="Serving:"
                android:textSize="18sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>